{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "extends": [],
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf"
    }
  },
  "javascript": {
    "formatter": {
      "attributePosition": "multiline",
      "indentStyle": "space"
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 90,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules",
      "dist",
      ".next",
      "aceternity-ui",
      ".turbo",
      ".obsidian",
      ".storybook"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnknownFunction": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "info",
        "noLabelWithoutControl": "info"
      }
    },
    "ignore": [
      "node_modules",
      "dist",
      ".next",
      "aceternity-ui",
      "*.stories.tsx",
      "*.stories.ts",
      "stories/*.tsx",
      "react-beautiful-hooks"
    ]
  }
}
